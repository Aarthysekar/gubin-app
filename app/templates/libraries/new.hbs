<h2>Add a new local Location</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">City*</label>
        <div class="col-sm-6">
            {{input type="text" value=model.city class="form-control" placeholder="The name of the Location"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Address</label>
        <div class="col-sm-6">
            {{input type="text" value=model.address class="form-control" placeholder="The address.."}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Phone</label>
        <div class="col-sm-6">
            {{input type="text" value=model.phone class="form-control" placeholder="The phone number "}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
            <button type="submit" class="btn btn-default" disabled={{model.isNotValid}} {{action 'saveLocation' model}}>Add to library list</button>
        </div>
    </div>
</div>

